# Production environment variables template
# Copy this file to .env.prod and fill in the values

# Django
DEBUG=0
SECRET_KEY=your-very-secure-secret-key-change-this
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database
POSTGRES_DB=schematicshop
POSTGRES_USER=schematicshop
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://schematicshop:your-secure-password@postgres:5432/schematicshop

# Redis
REDIS_URL=redis://redis:6379/0

# Object Storage (AWS S3 or compatible)
USE_S3=1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=schematics
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.your-domain.com
# For MinIO/self-hosted S3:
# AWS_S3_ENDPOINT_URL=https://s3.your-domain.com

# ClamAV
CLAMAV_ENABLED=1
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# OAuth / Social Authentication
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Authentik (if using as main IdP)
AUTHENTIK_URL=https://auth.your-domain.com
AUTHENTIK_CLIENT_ID=your-authentik-client-id
AUTHENTIK_CLIENT_SECRET=your-authentik-client-secret

# Frontend
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Sentry (optional)
SENTRY_DSN=your-sentry-dsn
