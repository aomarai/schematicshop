# Development environment variables
DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://schematicshop:devpassword@localhost:5432/schematicshop

# Redis
REDIS_URL=redis://localhost:6379/0

# Object Storage (MinIO/S3)
# Set to 0 for development/testing, 1 for production
USE_S3=0
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_STORAGE_BUCKET_NAME=schematics
AWS_S3_ENDPOINT_URL=http://localhost:9000

# ClamAV
# Set to 0 for development/testing, 1 for production
CLAMAV_ENABLED=0
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Hosts
ALLOWED_HOSTS=*

# Test Data
# Flag to indicate use of test/dummy schematics in development
# Load manually with: python manage.py load_test_schematics
ENABLE_TEST_DATA=0
